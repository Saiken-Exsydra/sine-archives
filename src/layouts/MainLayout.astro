---
import { getCollection } from "astro:content";
import "../styles/cards.css";


const {
  pageTitle = "SiNE Archives",
  tagline = "Authorized Historical Index ‚Äî Vesperia",
  active = "home",
} = Astro.props;

const sections = [
  { key: "characters", label: "Characters" },
  { key: "places", label: "Places" },
  { key: "redactory", label: "Redactory" },
  { key: "organizations", label: "Organizations" },
  { key: "artifacts", label: "Artifacts" },
  { key: "sigillums", label: "Sigillums" },
] as const;

type SectionKey = (typeof sections)[number]["key"];

const allPublic = (
  await Promise.all(
    sections.map(async (s) => {
      const entries = await getCollection(s.key as SectionKey);
      return entries
        .filter((e) => e.data.status === "public")
        .map((e) => ({ section: s.key, sectionLabel: s.label, entry: e }));
    })
  )
).flat();

const lastUpdated =
  allPublic
    .slice()
    .sort((a, b) => (a.entry.data.updated < b.entry.data.updated ? 1 : -1))[0] ?? null;

const lastTitle = lastUpdated?.entry.data.title ?? "‚Äî";
const lastDate = lastUpdated?.entry.data.updated ?? "‚Äî";
const lastHref = lastUpdated ? `/${lastUpdated.section}/${lastUpdated.entry.slug}/` : "/search/";
---


<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">

