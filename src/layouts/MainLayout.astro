  </div>
</div>
</aside>


      <!-- Main -->
      <main class="main">
        <header class="header">
          <div class="header__left">
  <div class="header__meta" aria-label="Index status">
    <span class="meta__item">PUBLIC ACCESS NODE: 01</span>
    <span class="meta__sep" aria-hidden="true"></span>
    <span class="meta__item">OVERSIGHT: ACTIVE</span>
    <span class="meta__sep" aria-hidden="true"></span>
    <span class="meta__item">TIER: PUBLIC</span>
  </div>

  <h1 class="title">
    <span class="title__sine">SiNE</span>
    <span class="title__archives">Archives</span>
  </h1>

  <p class="tagline">{tagline}</p>
</div>

          <div class="header__right">
            <form class="search" action="/search/" role="search" aria-label="Global search">
  <span class="search__icon" aria-hidden="true">üîé</span>
  <input class="search__input" type="search" name="q" placeholder="Search all public entries‚Ä¶" />
</form>



          </div>
        </header>

        <!-- Page content goes here -->
        <slot />
      </main>
    </div>

    <style>
      :root{
        --bg: #050507;
        --panel: #0b0b10;
        --panel2: #0f0f16;
        --border: rgba(176,141,60,0.25);
        --text: #fdfcff;              /* near-white ONLY */
        --accent: #7a0d14;            /* dark red */
        --gold: #b08d3c;              /* dull gold */
        --shadow: 0 10px 30px rgba(0,0,0,0.45);
      }

      /* Search layout fix */
.search{
  display: flex;
  align-items: center;
  gap: 10px;
}

.sidebar__sys {
  margin-top: 14px;
  padding-top: 10px;
  border-top: 1px solid rgba(255, 255, 255, 0.08);

  font-size: 0.72rem;
  color: #9a9a9a;

  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;

  letter-spacing: 0.06em;
  text-transform: uppercase;

  line-height: 1.5;
}

.sidebar__sys div {
  opacity: 0.85;
}


/* Make icon larger and aligned */
.search__icon{
  font-size: 18px;
  line-height: 1;
  opacity: 0.75;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Improve input alignment */
.search__input{
  font-size: 14px;
  line-height: 1.2;
}


      *{ box-sizing: border-box; }
      html, body{ height: 100%; }
      body{
        margin: 0;
        font-family: Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Apple Color Emoji","Segoe UI Emoji";
        background: var(--bg);
        color: var(--text);
      }

      /* Layout */
      .app{
        min-height: 100vh;
        display: grid;
        grid-template-columns: 280px 1fr;
      }

      /* Sidebar */
      .sidebar{
        position: sticky;
        top: 0;
        height: 100vh;
        padding: 18px 16px;
        border-right: 1px solid var(--border);
        background: linear-gradient(180deg, rgba(11,11,16,0.92), rgba(5,5,7,0.92));
        backdrop-filter: blur(6px);
        display: grid;
        grid-template-rows: auto 1fr auto;
        gap: 16px;
      }

      .brand{
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 10px 10px;
        border: 1px solid rgba(176,141,60,0.18);
        border-radius: 16px;
        background: rgba(15,15,22,0.55);
        box-shadow: var(--shadow);
      }
      .brand__mark{
        width: 36px;
        height: 36px;
        border-radius: 12px;
        background: radial-gradient(circle at 30% 30%, rgba(176,141,60,0.55), rgba(122,13,20,0.55));
        border: 1px solid rgba(176,141,60,0.35);
      }
      .brand__title{
        font-weight: 800;
        letter-spacing: 0.12em;
        font-size: 12px;
        line-height: 1;
        text-transform: uppercase;
      }
      .brand__sub{
        font-weight: 700;
        letter-spacing: 0.08em;
        font-size: 12px;
        opacity: 0.95;
      }

      .nav{
        display: flex;
        flex-direction: column;
        gap: 8px;
        padding: 2px;
      }

      .nav__item{
        text-decoration: none;
        color: var(--text);
        padding: 10px 12px;
        border-radius: 14px;
        border: 1px solid transparent;
        background: transparent;
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 650;
        letter-spacing: 0.02em;
      }
      .nav__item:hover{
        border-color: rgba(176,141,60,0.22);
        background: rgba(15,15,22,0.45);
      }
      .nav__item.is-active{
        background: rgba(122,13,20,0.35);
        border-color: rgba(122,13,20,0.65);
        box-shadow: 0 0 0 1px rgba(176,141,60,0.12) inset;
      }

      .note{
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 10px 12px;
        border-radius: 14px;
        border: 1px solid rgba(176,141,60,0.18);
        background: rgba(15,15,22,0.45);
      }
      .note__dot{
        width: 10px;
        height: 10px;
        border-radius: 999px;
        background: rgba(176,141,60,0.9);
        box-shadow: 0 0 0 3px rgba(176,141,60,0.12);
      }
      .note__text{
        font-weight: 650;
        letter-spacing: 0.02em;
      }

      /* Main */
      .main{
        padding: 22px 22px 40px;
      }

      .header{
        display: grid;
        grid-template-columns: 1fr 520px;
        gap: 18px;
        align-items: start;
        padding: 18px;
        border-radius: 18px;
        border: 1px solid rgba(176,141,60,0.18);
        background: rgba(11,11,16,0.6);
        box-shadow: var(--shadow);
      }

      .title{
        margin: 0;
        font-size: 32px;
        font-weight: 650;
        letter-spacing: 0.14em;
        line-height: 1.1;
        display: flex;
        gap: 14px;
        align-items: baseline;
        font-family: "Cinzel", ui-serif, Georgia, "Times New Roman", serif;
  font-weight: 500;
      }

      .title__sine{
  color: #b08d3c; /* controlled gold */
  font-weight: 800;
  letter-spacing: 0.22em;
}


      .title__archives{
        color: var(--text);
        font-weight: 500;
        letter-spacing: 0.12em;
      }

      .tagline{
        margin: 10px 0 0;
        font-size: 14px;
        font-weight: 650;
        letter-spacing: 0.06em;
        line-height: 1.4;
        position: relative;
        padding-top: 10px;
      }

      .tagline::before{
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 110px;
        height: 2px;
        background: rgba(176,141,60,0.75);
        border-radius: 999px;
      }

      .header__right{
        display: grid;
        gap: 12px;
        justify-items: stretch;
      }

      .search{
        display: grid;
        grid-template-columns: 26px 1fr;
        align-items: center;
        gap: 10px;
        padding: 10px 12px;
        border-radius: 14px;
        border: 1px solid rgba(176,141,60,0.22);
        background: rgba(15,15,22,0.55);
      }
      .search__icon{
        opacity: 0.95;
        font-size: 14px;
      }
      .search__input{
        appearance: none;
        border: none;
        outline: none;
        background: transparent;
        color: var(--text);
        font-weight: 650;
        letter-spacing: 0.02em;
      }
      .search__input::placeholder{
        color: rgba(253,252,255,0.78);
      }

      .updated{
        padding: 10px 12px;
        border-radius: 14px;
        border: 1px solid rgba(176,141,60,0.18);
        background: rgba(15,15,22,0.45);
        display: grid;
        gap: 6px;
        text-decoration: none;
color: var(--text);
cursor: pointer;

      }
      .updated:hover{
  border-color: rgba(176,141,60,0.32);
  background: rgba(15,15,22,0.55);
}

      .updated__label{
        font-size: 11px;
        letter-spacing: 0.14em;
        text-transform: uppercase;
        font-weight: 800;
        color: var(--text);
      }
      .updated__value{
        display: flex;
        justify-content: space-between;
        gap: 12px;
        font-weight: 700;
        letter-spacing: 0.02em;
      }
      .updated__date{
        opacity: 0.9;
      }

      /* ===== Header Monument Upgrade ===== */

.header{
