  border-radius: 999px;
}

.title{
  margin: 14px 0 0;
  font-size: 56px;        /* BIG */
  font-weight: 650;
  letter-spacing: 0.18em; /* ceremonial */
  line-height: 1.02;

  display: flex;
  gap: 16px;
  align-items: baseline;
}

.title__sine{
  color: #b08d3c;
  font-weight: 800;
  letter-spacing: 0.22em;
}

.title__archives{
  color: var(--text);
  font-weight: 500;
  letter-spacing: 0.14em;
}

.tagline{
  margin: 12px 0 0;
  font-size: 14px;
  font-weight: 650;
  letter-spacing: 0.08em;
  line-height: 1.5;

  position: relative;
  padding-top: 12px;
  color: rgba(253,252,255,0.86);
}

/* structural gold rule */
.tagline::before{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 220px;
  height: 1px;
  background: rgba(176,141,60,0.75);
}




      /* Responsive */
      @media (max-width: 980px){
        .app{ grid-template-columns: 1fr; }
        .sidebar{ position: relative; height: auto; }
        .header{ grid-template-columns: 1fr; }
      }
    </style>
  </body>
</html>
