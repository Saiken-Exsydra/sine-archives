---
import "../styles/cards.css";


const {
  pageTitle = "SiNE Archives",
  tagline = "Authorized Historical Index — Vesperia",
  active = "home",
} = Astro.props;

---


<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
  </head>

  <body>
    <div class="app">
      <!-- Sidebar -->
      <aside class="sidebar" aria-label="Primary navigation">
        <div class="sidebar__top">
          <div class="brand">
            <div class="brand__mark" aria-hidden="true"></div>

            <div class="brand__text">
              <div class="brand__title">SiNE</div>
              <div class="brand__sub">Archives</div>
            </div>
          </div>
        </div>

        <nav class="nav">
          <a class={`nav__item ${active === "home" ? "is-active" : ""}`} href="/">Home</a>
          <a class={`nav__item ${active === "characters" ? "is-active" : ""}`} href="/characters/">Characters</a>
          <a class={`nav__item ${active === "places" ? "is-active" : ""}`} href="/places/">Places</a>
          <a class={`nav__item ${active === "redactory" ? "is-active" : ""}`} href="/redactory/">Redactory</a>
          <a class={`nav__item ${active === "organizations" ? "is-active" : ""}`} href="/organizations/">Organizations</a>
          <a class={`nav__item ${active === "artifacts" ? "is-active" : ""}`} href="/artifacts/">Artifacts</a>
          <a class={`nav__item ${active === "sigillums" ? "is-active" : ""}`} href="/sigillums/">Sigillums</a>
          <a class={`nav__item ${active === "search" ? "is-active" : ""}`} href="/search/">Search</a>
        </nav>

        <div class="sidebar__bottom">
  <div class="note">
    <span class="note__dot" aria-hidden="true"></span>
    <span class="note__text">Access Tier: Public</span>
  </div>

  <div class="sidebar__sys" aria-label="System status">
    <div>Public Access Node: 01</div>
    <div>Oversight Status: Active</div>
  </div>
</div>
</aside>


      <!-- Main -->
      <main class="main">
        <header class="header">
          <div class="header__left">
  <div class="header__meta" aria-label="Index status">
    <span class="meta__item">PUBLIC ACCESS NODE: 01</span>
    <span class="meta__sep" aria-hidden="true"></span>
    <span class="meta__item">OVERSIGHT: ACTIVE</span>
    <span class="meta__sep" aria-hidden="true"></span>
    <span class="meta__item">TIER: PUBLIC</span>
  </div>

  <h1 class="title">
    <img class="title__logo" src="/uploads/SLOGOHOME.png" alt="SINE ARCHIVES" />
  </h1>

          <p class="tagline">{tagline}</p>
          <p class="motto">“Knowledge persists beyond collapse.”</p>
</div>

          <div class="header__right">
<form class="search" action="/search/" role="search" aria-label="Global search">
  <input class="search__input" type="search" name="q" placeholder="Search all public entries…" />
  <button class="search__button" type="submit">Search</button>
</form>



          </div>
        </header>

        <!-- Page content goes here -->
        <slot />
      </main>
    </div>

    <style>
      :root{
        --bg:#07080d;
        --text:#ebe8e6;
        --gold:#bba57a;
        --red:#7c1114;
        --line:rgba(255,255,255,0.14);
        --logo-url:url('/uploads/SLOGO.png');
      }

      *{ box-sizing:border-box; }
      html,body{ height:100%; }
      body{
        margin:0;
        color:var(--text);
        font-family:Inter,ui-sans-serif,system-ui;
        background:
          radial-gradient(1300px 700px at 50% -80px, rgba(72,90,126,.28), transparent 68%),
          radial-gradient(1000px 600px at 50% 55%, rgba(181,81,43,.18), transparent 75%),
          linear-gradient(180deg,#0f1624 0%, #0a0d16 36%, #06070b 100%);
      }

      .app{
        min-height:100vh;
        display:grid;
        grid-template-columns: 280px minmax(0,1fr);
      }

      .sidebar{
        position:sticky;
        top:0;
        height:100vh;
        padding:22px 18px;
        display:grid;
        grid-template-rows:auto 1fr auto;
        gap:22px;
        border-right:1px solid var(--line);
        background:linear-gradient(180deg, rgba(8,9,14,.9), rgba(5,5,10,.93));
      }

      .brand{
        display:flex;
        align-items:center;
        gap:12px;
        padding:10px;
        border:1px solid rgba(255,255,255,.1);
        border-radius:14px;
        background:rgba(9,11,19,.6);
      }

      .brand__mark{
        width:42px;
        height:42px;
        border-radius:50%;
        border:1px solid rgba(255,255,255,.25);
        background: var(--logo-url) center/cover no-repeat, radial-gradient(circle at 40% 35%, #39455d, #111722 74%);
      }

      .brand__title,
      .brand__sub{
        font-family:"Playfair Display", Georgia, serif;
        letter-spacing:.12em;
      }

      .nav{ display:grid; gap:7px; align-content:start; }

      .nav__item{
        text-decoration:none;
        color:rgba(236,236,236,.88);
        font-family:"Playfair Display", Georgia, serif;
        font-size:1.35rem;
        padding:11px 12px;
        border:1px solid transparent;
        border-radius:12px;
        background:transparent;
      }

      .nav__item:hover{ border-color:rgba(255,255,255,.18); background:rgba(255,255,255,.03); }
      .nav__item.is-active{
        border-color:rgba(171,48,46,.8);
        background:linear-gradient(90deg, rgba(171,48,46,.34), rgba(171,48,46,0));
      }

      .note{ display:flex; align-items:center; gap:9px; font-size:.8rem; letter-spacing:.08em; text-transform:uppercase; color:#b8b8b8; }
      .note__dot{ width:8px; height:8px; border-radius:50%; background:#cc9f66; box-shadow:0 0 18px rgba(204,159,102,.45); }
      .sidebar__sys{ margin-top:12px; padding-top:12px; border-top:1px solid rgba(255,255,255,.08); font-size:.72rem; letter-spacing:.08em; text-transform:uppercase; color:#9d9d9d; line-height:1.5; }

      .main{ padding:18px 22px 36px; }

      .header{
        position:relative;
        min-height:420px;
        display:grid;
        align-content:center;
        justify-items:center;
        text-align:center;
        gap:20px;
        border:1px solid rgba(255,255,255,.14);
        border-radius:0;
        overflow:hidden;
        background:
          linear-gradient(180deg, rgba(8,10,18,.45), rgba(8,10,18,.86)),
          radial-gradient(900px 360px at 50% 0%, rgba(255,199,143,.2), transparent 58%),
          url('/uploads/test.jpg') center/cover no-repeat;
      }

      .header::after{
        content:"";
        position:absolute;
        left:0; right:0; bottom:0;
        height:2px;
        background:linear-gradient(90deg, transparent, rgba(255,85,70,.95), transparent);
        box-shadow:0 0 22px rgba(255,72,52,.7);
      }

      .header__left,.header__right{ position:relative; z-index:1; }
      .header__meta{ display:none; }

      .title{
        margin:0;
        display:block;
        justify-content:center;
      }

      .title__logo{
        display:block;
        width:min(680px, 92vw);
        height:auto;
        margin:0 auto;
      }

      .tagline{
        margin:8px 0 0;
        font-family:"Playfair Display", Georgia, serif;
        font-size:2rem;
        color:#d6cdc3;
      }
      .tagline::before{ display:none; }

      .motto{
        margin:10px 0 0;
        font-family:"Playfair Display", Georgia, serif;
        font-style:italic;
        letter-spacing:.02em;
        color:rgba(236,231,224,.76);
      }

      .header__right{ width:min(560px, 94%); }

      .search{
        display:grid;
        grid-template-columns:1fr auto;
        gap:0;
        border:1px solid rgba(255,255,255,.22);
        background:rgba(10,11,18,.7);
        border-radius:8px;
        overflow:hidden;
      }
      .search__input{
        min-width:0;
        padding:16px 18px;
        border:0;
        background:transparent;
        color:var(--text);
        font-family:"Playfair Display", Georgia, serif;
        font-size:1.1rem;
      }
      .search__input::placeholder{ color:rgba(242,236,228,.7); }
      .search__button{
        border:0;
        padding:0 26px;
        color:#efe6da;
        background:linear-gradient(180deg, #8f1b1a, #6d0f13);
        font-family:"Playfair Display", Georgia, serif;
        text-transform:uppercase;
        letter-spacing:.08em;
        font-size:1.65rem;
        cursor:pointer;
      }

      @media (max-width: 1024px){
        .app{ grid-template-columns:1fr; }
        .sidebar{ position:relative; height:auto; }
        .main{ padding:12px; }
        .header{ min-height:360px; }
      }

      @media (max-width: 720px){
        .title{ font-size:2.1rem; }
        .tagline{ font-size:1.3rem; }
        .search__button{ font-size:1.1rem; padding:0 16px; }
      }
    </style>
  </body>
</html>
